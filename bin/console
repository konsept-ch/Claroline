#!/usr/bin/env php
<?php

use Claroline\KernelBundle\Kernel;
use Symfony\Bundle\FrameworkBundle\Console\Application;
use Symfony\Component\Console\Input\ArgvInput;

set_time_limit(0);

require dirname(__DIR__).'/config/bootstrap.php';

if (!class_exists(Application::class)) {
    throw new LogicException('You need to add "symfony/framework-bundle" as a dependency to use the console.');
}

$input = new ArgvInput();

if (null !== $env = $input->getParameterOption(['--env', '-e'], null, true)) {
    putenv('APP_ENV='.$env);
    $_SERVER['APP_ENV'] = $_ENV['APP_ENV'] = $env;
}

$debugOption = $input->getParameterOption('--debug', $_SERVER['APP_DEBUG'] ?? $_ENV['APP_DEBUG'] ?? true, true);
$debug = filter_var($debugOption, FILTER_VALIDATE_BOOLEAN);

if ($input->hasParameterOption('--no-debug', true)) {
    $debug = false;
}

putenv('APP_DEBUG=' . ($debug ? '1' : '0'));
$_SERVER['APP_DEBUG'] = $_ENV['APP_DEBUG'] = $debug ? '1' : '0';

$kernel = new Kernel($_SERVER['APP_ENV'], (bool) $_SERVER['APP_DEBUG']);
$application = new Application($kernel);
$application->run($input);
